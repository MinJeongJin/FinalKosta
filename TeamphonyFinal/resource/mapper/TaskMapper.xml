	<insert id="insertTask" parameterType="task">

	</insert>

	<update id="updateTask" parameterType="String">

	</update>


	<delete id="deleteTask" parameterType="String">

	</delete>


	<select id="selectAllTask" resultType="task">



	</select>


	<select id="selectTaskByTaskId" 
		resultType="task">

		select

		ID   				AS taskId
		,TITLE              AS title
		,CONTENTS           AS contents
		,DEADLINE           AS deadline
		,EVALUATIONPERIOD   
		,FLAG               
		,POINT              AS point
		from task_tb
		where id= #{taskId}

	</select>

	<select id="selectTaskByMemberId" parameterType="String"
		resultType="task">

	</select>



