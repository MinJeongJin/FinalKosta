<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<typeAliases>
		<typeAlias type="teamphony.domain.Member" alias="Member" />
		<typeAlias type="teamphony.domain.Place" alias="Place" />
		<typeAlias type="teamphony.domain.Post" alias="Post" />
		<typeAlias type="teamphony.domain.Schedule" alias="Schedule" />
		<typeAlias type="teamphony.domain.Task" alias="Task" />
		<typeAlias type="teamphony.domain.Team" alias="Team" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver" />
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
				<property name="username" value="finalPhony" />
				<property name="password" value="phony" />
			</dataSource>
		</environment>
	</environments>	
	<mappers>
		<mapper resource="/teamphony/store/mapper/MemberMapper.xml" />
		<mapper resource="/teamphony/store/mapper/TeamMapper.xml" />
		<mapper resource="/teamphony/store/mapper/PlaceMapper.xml" />
		<mapper resource="/teamphony/store/mapper/PostMapper.xml" />
		<mapper resource="/teamphony/store/mapper/ScheduleMapper.xml" />
		<mapper resource="/teamphony/store/mapper/TaskMapper.xml" />
	</mappers>
	
</configuration>